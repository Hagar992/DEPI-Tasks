@{
    ViewData["Title"] = "Car Showroom";
}

<!-- Hero Section -->
<div class="bg-dark text-white text-center py-5" style="background: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.6)), url('/images/showroom.jpg') center/cover; height: 80vh;">
    <div class="d-flex flex-column justify-content-center align-items-center h-100">
        <h1 class="display-3 fw-bold mb-3">Welcome to Our Car Showroom</h1>
        <p class="lead mb-4">Explore the latest models and manage your car collection with ease.</p>
        <a href="/Cars/Index" class="btn btn-primary btn-lg px-4 py-2">Go to Dashboard</a>
    </div>
</div>

<!-- Featured Cars Section -->
<div class="container my-5">
    <h2 class="text-center mb-4">Featured Cars</h2>
    <div class="row row-cols-1 row-cols-md-3 g-4">
        <!-- Car 1 -->
        <div class="col">
            <div class="card shadow-sm">
                <img src="/images/car1.jpg" class="card-img-top" alt="Car 1">
                <div class="card-body text-center">
                    <h5 class="card-title">Toyota Corolla</h5>
                    <p class="card-text text-muted">$22,000</p>
                </div>
            </div>
        </div>

        <!-- Car 2 -->
