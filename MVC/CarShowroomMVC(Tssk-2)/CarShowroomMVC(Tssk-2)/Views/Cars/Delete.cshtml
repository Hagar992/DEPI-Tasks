@model CarShowroomMVC.Models.Car

@{
    ViewData["Title"] = "Delete Car";
}

<div class="container mt-5">
    <div class="card shadow-sm p-4">
        <h3 class="text-danger fw-bold mb-3">Are you sure you want to delete this car?</h3>

        <div class="row">
            <div class="col-md-4 text-center">
                <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid rounded mb-3" style="max-height:200px; object-fit:cover;">
            </div>

            <div class="col-md-8">
                <ul class="list-group mb-3">
                    <li class="list-group-item"><strong>Name:</strong> @Model.Name</li>
                    <li class="list-group-item"><strong>Brand:</strong> @Model.Brand</li>
                    <li class="list-group-item"><strong>Year:</strong> @Model.Year</li>
                    <li class="list-group-item"><strong>Price:</strong> $@Model.Price</li>
                </ul>

                <form asp-action="DeleteConfirmed" method="post">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger px-4">Yes, Delete</button>
                    <a href="/Cars/Index" class="btn btn-secondary ms-2">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>
