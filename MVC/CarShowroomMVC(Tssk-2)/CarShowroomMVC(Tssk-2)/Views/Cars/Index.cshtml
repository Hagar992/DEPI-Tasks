@model IEnumerable<CarShowroomMVC.Models.Car>

@{
    ViewData["Title"] = "Dashboard - Cars Management";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">Cars Dashboard</h2>
        <a href="/Cars/Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Add New Car
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            No cars available. <a href="/Cars/Create" class="alert-link">Add your first car</a>.
        </div>
    }
    else
    {
        <table class="table table-bordered table-striped table-hover align-middle shadow-sm">
            <thead class="table-dark text-center">
                <tr>
                    <th>Image</th>
                    <th>Name</th>
                    <th>Brand</th>
                    <th>Year</th>
                    <th>Price ($)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody class="text-center">
                @foreach (var car in Model)
                {
                    <tr>
                        <td>
                            <img src="@car.ImageUrl" alt="@car.Name" width="100" height="70" style="object-fit:cover; border-radius:8px;">
                        </td>
                        <td>@car.Name</td>
                        <td>@car.Brand</td>
                        <td>@car.Year</td>
                        <td>@car.Price.ToString("N0")</td>
                        <td>
                            <a href="/Cars/Edit/@car.Id" class="btn btn-sm btn-primary me-1">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <a href="/Cars/Delete/@car.Id" class="btn btn-sm btn-danger me-1">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                            <a href="/Cars/Details/@car.Id" class="btn btn-sm btn-info text-white">
                                <i class="bi bi-eye"></i> Details
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
