@model CarShowroomMVC.Models.Car

@{
    ViewData["Title"] = "Edit Car";
}

<div class="container mt-5">
    <h2 class="fw-bold mb-4">Edit Car Information</h2>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label class="form-label">Car Name</label>
            <input asp-for="Name" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">Brand</label>
            <input asp-for="Brand" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">Year</label>
            <input asp-for="Year" class="form-control" type="number" />
        </div>

        <div class="mb-3">
            <label class="form-label">Price ($)</label>
            <input asp-for="Price" class="form-control" type="number" />
        </div>

        <div class="mb-3">
            <label class="form-label">Image URL</label>
            <input asp-for="ImageUrl" class="form-control" />
        </div>
        <div class="mb-3">
            <label class="form-label">Change Image (optional)</label>
            <input asp-for="ImageFile" class="form-control" type="file" />
        </div>


        <button type="submit" class="btn btn-primary px-4">Save Changes</button>
        <a href="/Cars/Index" class="btn btn-secondary ms-2">Cancel</a>
    </form>
</div>
