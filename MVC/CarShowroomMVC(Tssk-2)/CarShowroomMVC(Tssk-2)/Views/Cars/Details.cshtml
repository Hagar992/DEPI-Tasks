@model CarShowroomMVC.Models.Car

@{
    ViewData["Title"] = "Car Details";
}

<div class="container mt-5">
    <div class="card shadow-sm p-4">
        <div class="row">
            <div class="col-md-5 text-center">
                <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid rounded mb-3" style="max-height:250px; object-fit:cover;">
            </div>

            <div class="col-md-7">
                <h2 class="fw-bold mb-3">@Model.Name</h2>
                <p><strong>Brand:</strong> @Model.Brand</p>
                <p><strong>Year:</strong> @Model.Year</p>
                <p><strong>Price:</strong> $@Model.Price.ToString("N0")</p>

                <div class="mt-4">
                    <a href="/Cars/Edit/@Model.Id" class="btn btn-primary me-2">
                        <i class="bi bi-pencil"></i> Edit
                    </a>
                    <a href="/Cars/Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Back to Dashboard
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
